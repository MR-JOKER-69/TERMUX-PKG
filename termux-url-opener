echo -e '\033[92m ######   #######  ##    ## ######## ##     ## '
echo -e '\n\033[92mÂ°Â°Â°Â°Â°Â°Â°\033[91mÂ°Â°Â°Â°Â°Â°Â°Â°Â°\033[92mÂ°Â°Â°Â°Â°Â°Â°Â°Â°Â°\033[91mÂ°Â°Â°Â°Â°Â°Â°\033[92mÂ°Â°Â°Â°Â°Â°Â°Â°Â°Â°\033[91mÂ°Â°Â°Â°\033[92m\n\033[91mÂ° \033[91m[\033[92mÃ—\033[91m]\033[92m ð˜¼ð™ð™ð™ƒð™Šð™  \033[93m  : \033[91m ð™ˆð™ ð™…ð™Šð™†ð™€ð™                   \033[92mÂ°\n\033[91mÂ° \033[91m[\033[92mÃ—\033[91m]\033[92m ð™‚ð™„ð™ð™ƒð™ð˜½   \033[93m : \033[91m ð™ˆð™-ð™…ð™Šð™†ð™€ð™-69                \033[92mÂ°\n\033[91mÂ°\033[91m [\033[92mÃ—\033[91m]\033[92m ð™’ð™ƒð˜¼ð™ð™Žð˜¼ð™‹ð™‹  \033[93m: \033[91m 01750376469                \033[92mÂ°\n\033[92mÂ°Â°Â°Â°Â°Â°Â°\033[91mÂ°Â°Â°Â°Â°Â°Â°Â°Â°\033[92mÂ°Â°Â°Â°Â°Â°Â°Â°Â°Â°\033[91mÂ°Â°Â°Â°Â°Â°Â°\033[92mÂ°Â°Â°Â°Â°Â°Â°Â°Â°Â°\033[91mÂ°Â°Â°Â°'
